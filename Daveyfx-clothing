<script>
  const items = [
    {brand:"Dior", name:"Dior Jacket", price:450, img:"https://images.pexels.com/photos/2983464/pexels-photo-2983464.jpeg"},
    {brand:"Louis Vuitton", name:"LV Bag", price:780, img:"https://images.pexels.com/photos/461428/pexels-photo-461428.jpeg"},
    {brand:"Gucci", name:"Gucci Sneakers", price:520, img:"https://images.pexels.com/photos/2529148/pexels-photo-2529148.jpeg"},
    {brand:"Nike", name:"Nike T-Shirt", price:75, img:"https://images.pexels.com/photos/428338/pexels-photo-428338.jpeg"},
    {brand:"Adidas", name:"Adidas Hoodie", price:120, img:"https://images.pexels.com/photos/1005413/pexels-photo-1005413.jpeg"},
    {brand:"Chanel", name:"Chanel Cap", price:160, img:"https://images.pexels.com/photos/2983467/pexels-photo-2983467.jpeg"}
  ];

  let cart = [];
  let currentFilter = "all";

  function render(list) {
    document.getElementById("products").innerHTML = list.map((i,idx)=>`
      <div class="card">
        <div class="discount">-10%</div>
        <img src="${i.img}">
        <h4>${i.name}</h4>
        <div class="price">$${i.price}</div>
        <input class="qty" type="number" value="1" min="1" id="q${idx}">
        <button onclick="add(${idx})">Add to cart</button>
      </div>
    `).join("");
  }

  function add(i) {
    const qty = parseInt(document.getElementById("q"+i).value || 1);
    for(let x=0;x<qty;x++){ cart.push(items[i]); }
    toggleCart(true);
    showCart();
  }

  function showCart() {
    document.getElementById("cartItems").innerHTML = cart.map(i=>`
      <div class="cart-item">${i.name} - $${i.price}</div>
    `).join("");
  }

  function toggleCart(force) {
    const c = document.getElementById("cart");
    if(force) { c.classList.add("open"); return; }
    c.classList.toggle("open");
  }

  function showLogin(){ document.getElementById("login").style.display="flex"; }
  function showRegister(){ document.getElementById("register").style.display="flex"; }
  function showCheckout(){ document.getElementById("checkout").style.display="flex"; }

  function closeModal(id){ document.getElementById(id).style.display="none"; }

  function pay(){
    alert("Payment recorded. Order saved.");
    closeModal("checkout");
  }

  function bot(){
    const q=document.getElementById("q").value.toLowerCase();
    let a="Ask about prices or delivery.";
    if(q.includes("price")) a="Prices show under each item.";
    if(q.includes("delivery")) a="Delivery takes 24 to 72 hours.";
    document.getElementById("a").innerText=a;
  }

  function filterBrand(b){
    currentFilter=b;
    const list = b==="all" ? items : items.filter(i=>i.brand===b);
    render(list);
  }

  function searchProducts(){
    const s = document.getElementById("search").value.toLowerCase();
    const list = items.filter(i=> i.name.toLowerCase().includes(s));
    render(list);
  }

  function toggleDark(){
    document.documentElement.classList.toggle("dark");
  }

  function updateTime(){
    document.getElementById("time").innerText = new Date().toLocaleString();
  }
  setInterval(updateTime,1000);

  render(items);
</script>

</body>
